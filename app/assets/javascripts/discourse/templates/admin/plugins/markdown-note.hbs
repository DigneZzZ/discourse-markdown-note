<div class="admin-container">
  <div class="admin-title">
    <h1>{{i18n "js.markdown_note.admin.title"}}</h1>
  </div>
  
  <div class="admin-content">
    <div class="markdown-note-settings">
      <p class="description">{{i18n "js.markdown_note.admin.description"}}</p>
        <div class="display-options">
        <h3>{{i18n "js.markdown_note.admin.display_options"}}</h3>
        <div class="options-row">
          <label class="option-toggle">
            <input type="checkbox" 
                   checked={{showTitles}}
                   {{action "toggleTitles"}}>
            {{i18n "js.markdown_note.admin.show_titles"}}
          </label>
          
          <label class="option-toggle">
            <input type="checkbox" 
                   checked={{showIcons}}
                   {{action "toggleIcons"}}>
            {{i18n "js.markdown_note.admin.show_icons"}}
          </label>
        </div>
        
        <div class="theme-mode-selector">
          <h4>{{i18n "js.markdown_note.admin.theme_mode"}}</h4>
          <select {{action "changeThemeMode" on="change"}}>
            <option value="auto" selected={{eq themeMode "auto"}}>{{i18n "js.markdown_note.admin.theme_auto"}}</option>
            <option value="light" selected={{eq themeMode "light"}}>{{i18n "js.markdown_note.admin.theme_light"}}</option>
            <option value="dark" selected={{eq themeMode "dark"}}>{{i18n "js.markdown_note.admin.theme_dark"}}</option>
          </select>
        </div>
      </div>
      
      <div class="theme-toggle">
        <label>
          <input type="checkbox" 
                 checked={{isDarkTheme}}
                 {{action "toggleTheme"}}>
          {{#if isDarkTheme}}
            üåô Dark Theme Preview
          {{else}}
            ‚òÄÔ∏è Light Theme Preview
          {{/if}}
        </label>
      </div>
      
      <div class="note-type-settings">
        {{#each noteTypes as |type|}}
          <div class="note-type-section">
            <h3>{{type.icon}} {{get (i18n "js.markdown_note.admin.types") type.key "title"}}</h3>
            
            <div class="color-settings">
              <div class="settings-row">
                <div class="color-input-group">
                  <label>{{i18n "js.markdown_note.admin.background_color"}} (Light)</label>
                  <input type="text" 
                         class="gradient-input" 
                         data-setting="{{type.key}}_bg_light"
                         value="{{get noteSettings (concat type.key '_bg_light')}}"
                         placeholder="linear-gradient(...) or #color"
                         {{action "updateColor"}}>
                </div>
                
                <div class="color-input-group">
                  <label>{{i18n "js.markdown_note.admin.background_color"}} (Dark)</label>
                  <input type="text" 
                         class="gradient-input" 
                         data-setting="{{type.key}}_bg_dark"
                         value="{{get noteSettings (concat type.key '_bg_dark')}}"
                         placeholder="linear-gradient(...) or #color"
                         {{action "updateColor"}}>
                </div>
              </div>
              
              <div class="settings-row">
                <div class="color-input-group">
                  <label>{{i18n "js.markdown_note.admin.border_color"}}</label>
                  <input type="color" 
                         class="color-picker" 
                         data-setting="{{type.key}}_border"
                         value="{{get noteSettings (concat type.key '_border')}}"
                         {{action "updateColor"}}>
                </div>
              </div>
              
              <div class="settings-row">
                <div class="color-input-group">
                  <label>{{i18n "js.markdown_note.admin.text_color"}} (Light)</label>
                  <input type="color" 
                         class="color-picker" 
                         data-setting="{{type.key}}_text_light"
                         value="{{get noteSettings (concat type.key '_text_light')}}"
                         {{action "updateColor"}}>
                </div>
                
                <div class="color-input-group">
                  <label>{{i18n "js.markdown_note.admin.text_color"}} (Dark)</label>
                  <input type="color" 
                         class="color-picker" 
                         data-setting="{{type.key}}_text_dark"
                         value="{{get noteSettings (concat type.key '_text_dark')}}"
                         {{action "updateColor"}}>
                </div>
              </div>
            </div>
            
            <div class="preview-section">
              <h4>{{i18n "js.markdown_note.admin.preview"}}</h4>              <div class="note-preview {{type.key}} md-note" data-preview-type="{{type.key}}">
                <span class="note-icon">{{type.icon}}</span>
                <div class="note-content">
                  <span class="note-title">{{get (i18n "js.note") (concat type.key "_title")}}: </span>
                  {{get (i18n "js.markdown_note.admin.types") type.key "preview"}}
                </div>
              </div>  </div>
          </div>
        {{/each}}
      </div>
      
      <div class="admin-actions">
        <button type="button" 
                class="btn btn-primary save-settings" 
                {{action "saveSettings"}}
                disabled={{saving}}>
          {{#if saving}}
            {{i18n "saving"}}...
          {{else}}
            {{i18n "js.markdown_note.admin.save_settings"}}
          {{/if}}
        </button>
        <button type="button" 
                class="btn btn-default reset-settings" 
                {{action "resetDefaults"}}
                disabled={{saving}}>
          {{i18n "js.markdown_note.admin.reset_defaults"}}
        </button>
      </div>
      
      <div class="admin-status"></div>
    </div>
  </div>
</div>
